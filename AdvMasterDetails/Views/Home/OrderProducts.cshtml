@model List<AdvMasterDetails.OrderListItems>
@{
    ViewBag.Title = "Order Sheet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Order Details</h4>
            <hr />
        </div>

        <div class="modal-body">
            <section class="content-header">
                <h1>
                    Order Sheet
                    <small>🚚 Order List</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li><a href="#">Tables</a></li>
                    <li class="active">Data sheet</li>
                </ol>
            </section>
            <!-- Main content -->
            <div class="row">
                <div class="col-xs-12">
                    <!-- /.box -->
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Order List</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <a onclick="GetTeams(true)" class="btn btn-success" style="margin:5px;">Approved</a>
                            <a onclick="GetTeams(false)" class="btn btn-warning">Un-Approved</a>
                            <p><span>Order Number</span></p>
                            <table id="OrderSheet" cellspacing="0" width="100%" class="display table table-bordered table-striped">

                                <tr>
                                    @*<th width="8%" style="background-color:#333;color:whitesmoke;width:8%;text-align:center;">Sr No.</th>*@
                                    <th width="12%" style="background-color:#333;color:whitesmoke;width:12%;">Product Name</th>
                                    <th width="15%" style="background-color:#333;color:whitesmoke;width:15%;">Quantity</th>
                                    <th width="15%" style="background-color:#333;color:whitesmoke;width:15%;">Status</th>
                                    <th width="15%" style="background-color:#333;color:whitesmoke;width:15%;">Remarks</th>
                                    @*<th width="15%" style="background-color:#333;color:whitesmoke;width:15%;">Action</th>*@
                                </tr>

                                @*<tbody></tbody>*@
                                @foreach (OrderListItems orders in Model)
                                {
                                    <tr>
                                        <td>@orders.prodID</td>
                                        <td>@orders.prodName</td>
                                        <td>@orders.prodQuantity</td>
                                        <td>@orders.prodRemarks</td>
                                        <td>@orders.prodState</td>
                                        @*<td><a class="details" href="javascript:;">View</a></td>*@
                                    </tr>
                                }
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>

        </div>

    </div>
</div>
<link href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
@*<script src="~/Scripts/datatable/jquery.dataTables.min.js"></script>*@
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.4.2/css/buttons.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/select/1.2.3/css/select.dataTables.min.css" />
@*<link href="~/Content/datatables.net/EditorDatatable/css/editor.bootstrap.min.css" rel="stylesheet" />*@
@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/buttons/1.4.2/js/dataTables.buttons.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/select/1.2.3/js/dataTables.select.min.js" type="text/javascript"></script>
}