
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_material.cshtml";
}



    <div class="mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-grid">

        <!-- Container for the Table of content -->
        <div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop">
            <div class="mdl-card__supporting-text mdl-color-text--grey-600">
                <!-- div to display the generated Instance ID token -->
                <form action="#" style="text-align:center;">
                    <button id="demo-menu-lower-right" class="mdl-button mdl-js-button mdl-button--icon">
                        <i class="material-icons">more_vert</i>
                    </button>
                    <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="demo-menu-lower-right">
                        <li class="mdl-menu__item">Create New</li>
                        <li class="mdl-menu__item">Delete</li>
                        <li class="mdl-menu__item">Edit</li>
                        <li class="mdl-menu__item">Disable</li>
                    </ul>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input class="mdl-textfield__input" type="text" id="title">
                        <label class="mdl-textfield__label" for="title">Title</label>
                    </div>
                    <br />
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input class="mdl-textfield__input" type="text" id="Guid">
                        <label class="mdl-textfield__label" for="Guid">Guid</label>
                    </div>
                    <br />
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input class="mdl-textfield__input" type="text" id="img">
                        <label class="mdl-textfield__label" for="img">Image Url</label>
                    </div>
                    <br />
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input class="mdl-textfield__input" type="text" id="message">
                        <label class="mdl-textfield__label" for="message">Notification Message</label>
                        <br />
                        <br />
                        <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="switch-1" style="text-align:right;">
                            <input type="checkbox" id="switch-1" class="mdl-switch__input">
                            <span class="mdl-switch__label" style="text-align:left;">Activate</span>
                        </label>
                    </div>

                </form>
                <!-- div to display the UI to allow the request for permission to
                notify the user. This is shown if the app has not yet been
                granted permission to notify. -->
                <div id="permission_div" style="display: none;">
                    <h4>Needs Permission</h4>
                    <p id="token"></p>
                    <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" onclick="requestPermission()">Request Permission</button>
                </div>
                <!-- div to display messages received by this app. -->
                <div id="messages" style="text-align:center;">

                </div>
            </div>
        </div>

    </div>
